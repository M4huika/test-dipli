{% extends 'base.html.twig' %}
 
{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="my-4">Liste des produits</h2>
            {% if products is empty %}
                Il n'y a pas de produit à afficher
            {% else %}
                {% for product in products %}
                <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                    <div class="p-container-show p-4">
                        <div class="row">
                            <div class="col">
                                <h1 class="p-title-show">{{product.name}}</h1>
                                <div class="p-display p-3">
                                    <p class="d-inline">{{product.price}} €</p>
                                    <p class="pt-4"><strong>{{product.stock}} unité(s) / {{product.stockageCapacity}} total</strong></p>
                                </div>
                                <div class="p-actions">
                                    <a href="{{path('update', {id: product.id})}}">modifier</a>
                                    <a href="{{path('delete', {id: product.id})}}">supprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}